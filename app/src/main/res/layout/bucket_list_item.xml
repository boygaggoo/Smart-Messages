<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_bucket"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:id="@+id/bucket_list_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/bucket_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_alignParentStart="true"
            android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView.SpinnerItem"
            android:gravity="center_horizontal"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/bucket_count_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_alignParentStart="true"
            android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView.SpinnerItem"
            android:layout_below="@+id/bucket_name_textview"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:fontFamily="serif-monospace" />
    </RelativeLayout>

</android.support.v7.widget.CardView>